<%- include("../partials/header") %>

<h2>Products</h2>
<a href="/products/new">Add New Product</a>
<table border="1">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Supplier</th>
    <th>Action</th>
  </tr>
  <% if (products && products.length > 0) { %>
    <% products.forEach(function(p){ %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.supplierId ? p.supplierId.name : "N/A" %></td>
        <td>
          <a href="/products/<%= p._id %>/edit">Edit</a> |
          <a href="/products/<%= p._id %>/delete">Delete</a>
        </td>
      </tr>
    <% }); %>
  <% } else { %>
    <tr>
      <td colspan="5">No products found</td>
    </tr>
  <% } %>
</table>

<%- include("../partials/footer") %>
