<%- include("../partials/header") %>

<h2>Suppliers</h2>
<a href="/suppliers/new">Add New Supplier</a>
<table border="1">
  <tr>
    <th>Name</th><th>Address</th><th>Phone</th><th>Action</th>
  </tr>
  <% suppliers.forEach(function(s){ %>
    <tr>
      <td><%= s.name %></td>
      <td><%= s.address %></td>
      <td><%= s.phone %></td>
      <td>
        <a href="/suppliers/<%= s._id %>/edit">Edit</a> |
        <a href="/suppliers/<%= s._id %>/delete">Delete</a>
      </td>
    </tr>
  <% }); %>
</table>

<%- include("../partials/footer") %>
